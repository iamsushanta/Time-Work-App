<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/td_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="@string/details_task_name"
        android:textColor="#100D0D"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/td_description"
        app:layout_constraintEnd_toStartOf="@+id/td_description"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/td_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="@string/details_description"
        android:textColor="#100F0F"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/td_start_date"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/td_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/td_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="@string/details_date"
        android:textColor="#121010"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/td_description"
        app:layout_constraintEnd_toStartOf="@+id/td_durations"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/td_description" />

    <TextView
        android:id="@+id/td_durations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:text="@string/details_duration"
        android:textColor="#0C0C0C"
        app:layout_constraintBaseline_toBaselineOf="@+id/td_start_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/td_start_date" />
</androidx.constraintlayout.widget.ConstraintLayout>