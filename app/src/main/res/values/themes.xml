<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorTertiary">#580267</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TimeWork.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">#DCC70D</item>
        <item name="android:textColor">#42054C</item>
        <item name="android:background">#C6EAEF</item>
    </style>
    <style name="Theme.TimeWork.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TimeWork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>