<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeWork" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:textColorTertiary">#43054E</item>
    </style>


    <style name="Theme.TimeWork.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SettingsDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">#DCC70D</item>
        <item name="android:textColor">#42054C</item>
        <item name="android:background">#C6EAEF</item>
    </style>



    <style name="Theme.TimeWork.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TimeWork.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>